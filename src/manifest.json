{
  "manifest_version": 2,
  "name": "待办事项",
  "description": "待办事项",
  "version": "1.0.0",
  "browser_action": {
    "default_title": "待办事项",
    "default_icon": "assets/logo.png",
    "default_popup": "pages/popup.html"
  },
  "permissions": [
    "<all_urls>",
    "storage",
    "notifications",
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "16": "assets/logo.png",
    "48": "assets/logo.png",
    "128": "assets/logo.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "options_page": "pages/options.html",
  "web_accessible_resources": [
    "assets/*"
  ]
}
